{
    "manifest_version": 3,
    "name": "YouTube Go Brrr",
    "version": "1.0.0",
    "description": "Speed up YouTube videos with customizable speeds by default, genre, and channel",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["*://youtube.com/*", "*://www.youtube.com/*"],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "YouTube Go Brrr"
    },
    "content_scripts": [
        {
            "matches": ["*://youtube.com/*", "*://www.youtube.com/*"],
            "js": ["src/content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "images/icon-128.png"
    }
}
